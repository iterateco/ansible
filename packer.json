{
  "builders": [
    {
      "type": "amazon-ebs",
      "instance_type": "m3.medium",
      "source_ami": "ami-920b10ed",
      "ami_name": "iterate-18.04-{{timestamp}}",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update",
        "sudo dpkg --configure -a",
        "sudo apt install -y python"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./ami.yml",
      "user": "ubuntu",
      "extra_arguments" : ["-vvv"]
    }
  ]
}